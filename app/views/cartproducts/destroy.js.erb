if ("<%=@delete_scope%>" === "all"){
   // Modif NAVBAR   
   qtyProduct = document.getElementById("qty_product-<%=@product.id%>").innerHTML
   qtyProduct = parseInt(qtyProduct)
   totalCount = document.getElementById("item-count").innerHTML
   totalCount = parseInt(totalCount)
   document.getElementById("item-count").innerHTML = totalCount - qtyProduct
   //MODIF CART SHOW
   document.getElementById("product-<%=@product.id%>").remove()
   //CHANGE CART TOTAL PRICE
   productPrice = parseInt("<%=@product.price%>")
   totalPrice = document.getElementById("cart-total-amount").innerHTML
   totalPrice = parseInt(totalPrice)
   document.getElementById("cart-total-amount").innerHTML = totalPrice - productPrice * qtyProduct
   
} else {
// Modif NAVBAR  
   totalCount = document.getElementById("item-count").innerHTML
   totalCount = parseInt(totalCount)
   document.getElementById("item-count").innerHTML = totalCount - 1
   //MODIF CART SHOW
   qtyProduct = document.getElementById("qty_product-<%=@product.id%>").innerHTML
   qtyProduct = parseInt(qtyProduct)
   document.getElementById("qty_product-<%=@product.id%>").innerHTML = qtyProduct - 1
   //CHANGE CART TOTAL PRICE
   productPrice = parseInt("<%=@product.price%>")
   totalPrice = document.getElementById("cart-total-amount").innerHTML
   totalPrice = parseInt(totalPrice)
   document.getElementById("cart-total-amount").innerHTML = totalPrice - productPrice
}

