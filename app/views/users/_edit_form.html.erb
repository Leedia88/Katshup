<!-- ADD ALERT RENDER -->
<div class="row ps">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
            <%if @user.avatar.attached?%>
              <div class="rounded-circle mt-5" style="width:150px;"> <%= image_tag @user.avatar, alt: 'avatar'%> </div
             <%end%>
              <span class="font-weight-bold"><%= user.email%></span>
           <span class="text-black-50"></span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-center">Profile Settings</h4>
                </div>

              </div>
                  <%if @user.avatar.attached?%>
                  <%else%>
                        <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
                  <%end%>

                      <P>Changer d'avatar ?</P>
                    <%= form_tag user_avatars_path(@user), multipart: true do %>
                      <%= file_field_tag :avatar %>
                      <%= submit_tag "mettre à jour", :class => "bts" %>
                    <% end %>

      
      <%= form_for user do |f|%>

                  

              <div class="form-group my-3">
    <label>Prénom :</label>
    <%= f.text_field :first_name, class: 'form-control'%>
  </div>
  
  <div class="form-group my-3">
    <label>Nom :</label>
    <%= f.text_field :last_name, class: 'form-control'%>
  </div>

  <button type="submit" class="bts">Sauvegarder les modifications </button>

 </div>    
      <% end %>


  