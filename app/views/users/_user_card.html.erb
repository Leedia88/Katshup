<div class="rounded-top text-white d-flex flex-row align-content-bottom" style="background-color: #000; height:200px;">
  <div class="ms-4 d-flex flex-column image">
    <%if @user.avatar.attached?%>
       <%= image_tag @user.avatar, alt: 'avatar', style: "width :100%;"%> 
    <%end%>
  </div>
  <div class="user-info" style="margin-top: 130px;">
    <h3>First Name : <%= user.first_name%></h3>
    <h3>Last Name : <%= user.last_name%></h3>
  </div>
</div>
<div class="p-4 text-black" style="background-color: #f8f9fa;">
<%= link_to 'Editer Profil', edit_user_path, class:"btn btn-outline-dark", style: "z-index: 1;" %>
</div>
<div class="card-body p-4 text-black">
  <div class="mb-5">
    <p class="lead fw-normal mb-1">Information</p>
    <div class="p-4" style="background-color: #f8f9fa;">
      <p class="font-italic mb-1"><%= current_user.email %></p>
    </div>
  </div>
</div>


