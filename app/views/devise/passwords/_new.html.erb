<div class="container padding-bottom-3x mb-2 mt-5 password">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
          <div class="forgot">
          	
          	<h2>Forgot your password?</h2>
          <p>Change your password in three easy steps. This will help you to secure your password!</p>
          <ol class="list-unstyled">
            <li><span class="text-primary text-medium">1. </span>Enter your email address below.</li>
            <li><span class="text-primary text-medium">2. </span>Our system will send you a temporary link</li>
            <li><span class="text-primary text-medium">3. </span>Use the link to reset your password</li>
          </ol>
          </div>	
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="card-body">
              <div class="form-group">
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>
                <small class="form-text text-muted">Enter the email address you used during the registration on Katshup. Then we'll email a link to this address.</small>
              </div>
            </div>
            <div class="card-footer">
             <div class="actions">
                <%= f.submit "Send me reset password instructions" %>
             </div>
            </div>
          <%end%>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>