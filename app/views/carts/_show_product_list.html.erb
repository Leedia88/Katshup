<% products.uniq.each do |product| %>
    <div class="row border-top border-bottom product-list-<%= product.id %>">
        <div class="row main align-items-center">
            <div class="col-2"><img class="img-fluid" src="https://i.imgur.com/1GrakTl.jpg"></div>
            <div class="col">
                <div class="row text-muted"><%= product.title%></div>
                <div class="row"><%= product.description%></div>
            </div>
            <div class="col">
                <%= link_to '-', user_cart_cartproduct_path(current_user, current_user.cart, cart.get_cartproduct(product)), method: :delete, remote: true %>
                <span class="border px-1"><%= cart.nb_product_in_cart(product)%></span>
                <%= link_to "+", user_cart_cartproducts_path(current_user, current_user.cart, product: product.id), method: :post, remote: true%>
            </div>
            <div class="col">&euro; <%=product.price%> 
                <span class="close"> 
                    <%= link_to 'Retirer', user_cart_cartproduct_path(current_user, current_user.cart, cart.get_cartproduct(product), delete_scope: 'all') ,style: 'color:black', method: :delete %>
                </span>
            </div>
        </div>
    </div>
<% end %>
