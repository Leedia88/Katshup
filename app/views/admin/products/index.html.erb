<div class="text-center">
  <%= link_to "Créer un produit", new_admin_product_path,  :class => "btn btn-primary mx-2" %>
</div>
<h1 class="text-center">Liste des photos en vente actuellement</h1>
<div class="row">
  <div class="container-cards">
    <div class="container-card">
      <%= render partial: 'admin/products/product', layout: "admin/products/product_layout", collection: @active_products  %>
    </div>
  </div>
</div>
<h1 class="text-center">Liste des photos archivées</h1>
<div class="row">
  <div class="container-cards">
    <div class="container-card">
      <%= render partial: 'admin/products/product', layout: "admin/products/product_layout", collection: @archived_products  %>
    </div>
  </div>
</div>
