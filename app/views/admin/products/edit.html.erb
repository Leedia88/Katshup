<h1>Page Produit</h1>

<p>Bienvenue sur la page de modification du produit : <%=@product.id%></p>
<h3>Photo actuelle actuelle</h3>
<%if @product.image.attached?%>
  <%= image_tag @product.image, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'image lié à ce produit ===</p>
<%end%>

<h3>Changer d'image ?</h3>
<%= form_tag product_images_path(@product), multipart: true do %>
  <%= file_field_tag :image %>
  <%= submit_tag "mettre à jour" %>
<% end %>

<%=form_for :product, url: admin_product_path(@product), method: :patch do |f|%>
    <%if @product.errors.any? %>
        <% @productevent.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%=msg%></div>
        <%end%>
    <%end%>


<p>
<%= f.label :description, "Description"%> <br>
<%= f.text_field(:description, {:class => "form-control"})%>
</p>
<p>
<%= f.label :title, "Titre"%> <br>
<%= f.text_field(:title, {:class => "form-control"})%>
</p>
<p>
<%= f.label :price, "Prix"%> <br>
<%= f.text_field(:"price", {:class => "form-control"})%>
</p>

<p>
<br><%= f.submit("Modifier le produit", {:class => "card-link btn btn-info"}) %>
<%=link_to "Annuler", admin_products_path, :class => "card-link btn btn-light"%>

</p>
<%end%>
</div>
</div>