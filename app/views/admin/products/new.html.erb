<div class="container py-5 h-100">
  <div class="card" style="border-radius: 1rem;">
    <div class="row g-0">
      <div class="col-md-6 col-lg-5 d-block p-0" >
        <img src="https://images.unsplash.com/photo-1548546738-8509cb246ed3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" class="img-login">
      </div>
      <div class="col-md-6 col-lg-7 d-flex align-items-center">
        <div class="card-body p-4 p-lg-5 text-black">
          <%= form_for :product, url: admin_products_path, method: :post do |f| %>
            <div class="d-flex align-items-center mb-3 pb-1">
            </div>
            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Descripion du Produit</h5>
            <div class="form-outline mb-4">
              <div class="field">
                <%= f.label :title %><br />
                <%= f.text_field :title, autofocus: true %>
              </div>
            </div>
            <%= label_tag :categorie%> <br> 

              <%@categories.each do |cat|%>
                <%= label_tag cat.id, "#{cat.name}"%>
                <%= check_box_tag 'cats_id[]', cat.id%>
              <%end%>
            <div class="form-outline mb-4">
              <div class="field">
                <%= f.label :description %><br />
                <%= f.text_field :description, autofocus: true %>
              </div>
            </div>
            <div class="form-outline mb-4">
              <div class="field">
                <%= f.label :price %> â‚¬<br />
                <%= f.text_field :price, autofocus: true %>
              </div>
            </div>
            <div class="pt-1 mb-4">
              <div class="actions">
                <%= f.submit "Continuer" %>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
