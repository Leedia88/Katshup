<div class="cardy-container <%= product.categories_list%>" >
<div class="cardy">
    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
        <%if product.image.attached?%>
          <%= image_tag product.image, alt: 'avatar', style: "width:100%;" %>
        <%else%>
          <img src="<%=product.image_url%>" style="width:100%" alt="image chat">
        <%end%>
    </div>
    <div>
        <div class="d-flex justify-content-between">
              <div>
                  <p class="text-dark product-title"><%= product.title %> </p>
                  <p class="small text-muted"><%= product.description %></p>
                  
              </div>
              <div>
                  <div class="d-flex flex-row justify-content-end mt-1 mb-4 text-danger">
                    <%product.product_grade.to_i.times do%>
                    <i class="fas fa-star"></i>
                    <%end%>

                  </div>
              </div>
        </div>
    </div>
    <hr class="my-0" />
    <hr class="my-0" />
    <div>
      <%product.categories.each do |category|%>
        <span class="badge badge-pill badge-secondary badge-<%=category.name%>" style="padding: 9px 14px"><%= category.name %></span>
      <%end%>
      <p class="text-dark product-price"><%= product.price %> â‚¬</p>
      <%if current_user%>
        <div class="d-flex justify-content-between align-items-center pb-2 mb-1">  
          <%= link_to "Ajouter au panier", user_cart_cartproducts_path(current_user, current_user.cart, product: product.id), method: :post,  :class => "btn btn-outline-dark mx-2", remote: true %>
          <%= link_to "Voir plus", product_path(product), :class => "btn btn-outline-info mx-2" %>
        </div>
        <%else%>
        <div class="d-flex justify-content-center align-items-center pb-2 mb-1">  
          <%= link_to "Voir plus", product_path(product), :class => "btn btn-outline-info mx-2" %>
        </div>
      <%end%>
      
    </div>
</div>
</div>
